@model IEnumerable<MvcBlog.Models.Uye>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Üyeler</h2>

<p>
    @Html.ActionLink("Yeni Üye", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Yetki
        </th>
        <th>
            Kullanıcı Adı
        </th>
        <th>
            Eposta
        </th>
        <th>
            Şifre
        </th>
        <th>
            Ad Soyad
        </th>
        <th>
            Fotoğraf
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Yetki.Yetki1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KullaniciAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sifre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
            <img src="@item.Foto" class="img-circle img-responsive" alt="@item.AdSoyad" />
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.UyeId }) |
            @Html.ActionLink("Detay", "Details", new { id=item.UyeId }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.UyeId })
        </td>
    </tr>
}

</table>
