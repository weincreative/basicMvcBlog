<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>MVC Blog</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="~/Content/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="~/Content/css/clean-blog.min.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap-tagsinput.css" rel="stylesheet" />
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/css/blog-home.css" rel="stylesheet">

    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/Css/bootstrap.min.css")" rel="stylesheet" type="text/css" />

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">MVC Blog</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">               
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">ANASAYFA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hakkimizda">HAKKIMDA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Iletisim">İLETİŞİM</a>
                    </li>
                </ul>
               
                <ul class="nav navbar-nav navbar-right top-nav ml-auto">
                    @if (Session["uyeid"] != null)
                    {
                        <li class="dropdown nav-item">

                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> @Session["kullaniciadi"].ToString() <b class="caret"></b></a>
                            <ul class="dropdown-menu">

                                <li>
                                    <a href="/Uye/Index/@Session["uyeid"]">@Session["kullaniciadi"].ToString()<i class="fa fa-fw fa-user-circle-o"></i> Profil</a>
                                </li>
                                <li class="divider"></li>

                                
                                @if (Convert.ToInt32(Session["yetkiid"]) == 1)
                                {
                                    <li>
                                        <a href="/Admin/Index/" target="_blank"><i class="fa fa-fw fa-gear"></i> Admin Paneli </a>
                                    </li>
                                }
                                <li>
                                    <a href="/Uye/Logout"><i class="fa fa-fw fa-power-off"></i> Çıkış </a>
                                </li>




                            </ul>
                        </li>
                    }
                    else
                    {
                        
                        <li class="nav-item">
                            <a class="nav-item" href="/Uye/Login"> GİRİŞ </a>
                        </li>
                        <li class="nav-item">
                        
                            <a class="nav-item" href="/Uye/Create"> KAYIT OL </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('../../Content/img/52e64f901c5471697f00007f.jpg');">
   
  
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Blog</h1>
                        <span class="subheading">Mvc ile blog sitesi yapımı</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div>

                <div class="col-md-8">
                    @*Content*@
                    @RenderBody()
                </div>

                <div class="col-md-4">
                    <!-- Blog Search Well -->
                    <div class="well">
                        @Html.Partial("BlogAraPartial")
                        <!-- /.input-group -->
                    </div>
                    <!-- Blog Categories Well -->
                    <div class="well">


                        @{
                            Html.RenderAction("KategoriPartial", "Home");
                        }

                        <!-- /.col-lg-6 -->
                        <!-- /.col-lg-6 -->
                        <!-- /.row -->
                    </div>
                    <!-- Side Widget Well -->
                    <div class="well">
                        @{
                            Html.RenderAction("PopulerMakaleler", "Home");
                        }
                    </div>
                    <div class="well">
                        @{
                            Html.RenderAction("SonYorumlar", "Home");
                        }
                    </div>
                </div>
            </div>
        </div>


            <hr>

            <!-- Footer -->
            <footer>
                <div class="container">
                    <div class="form-row">
                        <div class="col-lg-12">
                            <p>Copyright &copy; @DateTime.Now.Year</p>
                        </div>
                    </div>
                </div>
            </footer>
      
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/Content/js/clean-blog.min.js"></script>
    <script src="~/Content/js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/js/bootstrap-tagsinput.js"></script>
    <script src="~/Content/js/bootstrap-tagsinput-angular.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
</body>

</html>
