@model MvcBlog.Models.Uye

@{
    ViewBag.Title = "UyeProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Üye Profil</h2>

<div class="col-md-8">

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Yetkisi: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Yetki.Yetki1)
        </dd>


        <dt>
           Eposta: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        

        <dt>
            Ad Soyad: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>

        <dt>
            Fotoğraf: 
        </dt>

        <dd>
            <img src="@Model.Foto" class="img-circle img-responsive" alt="@Model.AdSoyad" />
        </dd>

    </dl>
    <h4>Son Eklediği Makaleler</h4>
    <div class="col-md-8">
        @foreach (var item in Model.Makales.OrderByDescending(m => m.MakaleId).Take(5))
        {
            <li><a href="/Home/MakaleDetay/@item.MakaleId">@item.Baslik</a></li>
        }

    </div>

</div>


